{
  "name": "prism",
  "version": "3.1.1",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "postinstall": "husky install",
    "start": "yarn workspace @prism/toolkit build-rollup && yarn workspace @prism/facets start",
    "test": "yarn toolkit:test",
    "build": "yarn workspace @prism/toolkit build-rollup && yarn workspace @prism/facets build && yarn workspace @prism/toolkit build && yarn docs:build && yarn demo:build",
    "publish": "yarn workspace @prism/toolkit build-rollup && cd packages/toolkit && yarn npm publish",
    "docs:start": "yarn workspace @prism/prism-docs start",
    "docs:build": "yarn workspace @prism/prism-docs build",
    "demo:start": "yarn workspace @prism/prism-demo start",
    "demo:build": "yarn workspace @prism/prism-demo build",
    "facets:storybook": "yarn workspace @prism/facets storybook",
    "facets:test": "yarn workspace @prism/facets test",
    "toolkit:storybook": "yarn workspace @prism/toolkit start",
    "toolkit:test": "yarn workspace @prism/toolkit test",
    "toolkit:cypress": "yarn workspace @prism/toolkit test:cypress"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "autoprefixer": "10.4.7",
    "danger": "11.1.1",
    "danger-plugin-simple-collection": "0.0.23",
    "danger-plugin-wordcheck": "0.0.3",
    "husky": "7.0.0",
    "postcss": "7.0.35",
    "postcss-focus-visible": "6.0.3",
    "prettier": "2.6.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.36",
    "@fortawesome/pro-light-svg-icons": "5.15.4",
    "@fortawesome/pro-regular-svg-icons": "5.15.4",
    "@fortawesome/pro-solid-svg-icons": "5.15.4",
    "@fortawesome/react-fontawesome": "0.1.16",
    "@prism/toolkit": "3.1.1",
    "@types/react": "18.0.14",
    "@types/react-dom": "18.0.5",
    "axios": "^0.27.2",
    "ejs": "2",
    "react": "18.2.0",
    "react-dnd": "16.0.1",
    "react-dom": "18.2.0",
    "tailwindcss": "^3.0.24"
  }
}
