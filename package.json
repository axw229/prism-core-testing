{
  "name": "prism",
  "version": "3.0.0",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "start": "yarn workspace @prism/toolkit build-rollup && yarn workspace @prism/facets start",
    "build": "yarn workspace @prism/toolkit build-rollup && yarn workspace @prism/facets build && yarn workspace @prism/toolkit build && yarn docs:build && yarn demo:build",
    "storybook:facets": "yarn workspace @prism/facets storybook",
    "storybook:toolkit": "yarn workspace @prism/toolkit start",
    "docs:start": "yarn workspace @prism/prism-docs start",
    "docs:build": "yarn workspace @prism/prism-docs build",
    "demo:start": "yarn workspace @prism/prism-demo start",
    "demo:build": "yarn workspace @prism/prism-demo build",
    "test:facets": "yarn workspace @prism/facets test",
    "test:toolkit": "yarn workspace @prism/toolkit test",
    "cypress:toolkit": "yarn workspace @prism/toolkit cypress",
    "publish": "yarn workspace @prism/toolkit build-rollup && cd packages/toolkit && yarn npm publish"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "husky": "7.0.0"
  },
  "dependencies": {
    "ejs": "2",
    "prettier": "^2.6.2",
    "react": "16",
    "react-dom": "16"
  }
}
