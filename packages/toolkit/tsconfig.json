{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017", "es2019"],
    "sourceMap": true,

    "strict": false,
    // uncomment when all errors have been fixed
    // "noImplicitAny": true,

    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["cypress", "@testing-library/cypress", "cypress-storybook/cypress", "node"]
  },
  "include": ["src", "cypress/__tests__/**/*"],
  "exclude": ["./node_modules/**/*"]
}
