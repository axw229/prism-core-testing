<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <base href="/">
    <title>HGTV HomeÂ® by Sherwin-Williams Color Visualizer</title>
</head>

<body>
<div id="prism-embed-root"
     data-prism-facet="ColorVisualizer"
     data-color-wall-bg-color="#FFF"
     data-language="en-US"
     data-default-route="/active/color-wall/"
     data-route-type="hash"
     data-max-scene-height="640"
     data-brand="hgtv"
     data-cwv3
     data-always-show-color-families
     data-color-details-add-color></div>

<script src="<%= BASE_PATH %>/embed.js"></script>
<script>
  (() => {
    window.PRISM.embed(document.getElementById( 'prism-embed-root' ), {
      bindCallback: ({ publish, subscribe }) => {
        subscribe('prism-new-color', color => {
          console.info({ event: 'prism-new-color', data: color })
          publish('PRISM/in/update-color-ctas', [{
            text: 'buy this paint',
            link: `https://www.lowes.com/configure/paint/${color.legacyColor.name}/${color.brandKey}${color.legacyColor.colorNumber}?paintType=Interior&sheenType=Satin&sizeType=1-gallon`,
            attributes: {
              target: '_blank'
            }
          }])
        })
      }
    })
  })()
</script>
</body>
</html>
