{
  "parser": "@babel/eslint-parser",
  "extends": ["standard", "standard-react", "plugin:flowtype/recommended", "prettier"],
  "plugins": ["flowtype", "react-hooks", "jest", "formatjs", "cypress"],
  "globals": {
    "API_PATH": "readonly",
    "APP_VERSION": "readonly",
    "BASE_PATH": "readonly",
    "Blob": "readonly",
    "ENV": "readonly",
    "FileReader": "readonly",
    "FIREBASE_AUTH_ENABLED": "readonly",
    "GENERATE_FACET_ASSETS": "readonly",
    "Image": "readonly",
    "ImageData": "readonly",
    "IS_DEVELOPMENT": "readonly",
    "IS_PRODUCTION": "readonly",
    "ML_API_URL": "readonly",
    "render": "readonly",
    "SMARTMASK_ENABLED": "readonly",
    "STATIC_TEMPLATES": "readonly",
    "S3_PATH": "readonly",
    "URL": "readonly",
    "VAR_NAMES": "readonly",
    "VAR_VALUES": "readonly",
    "WEBPACK_CONSTANTS": "readonly",
    "Worker": "readonly",
    "MOCK_API": "readonly"
  },
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "jest/no-disabled-tests": "warn",
    "jest/no-focused-tests": "error",
    "jest/no-identical-title": "error",
    "jest/prefer-to-have-length": "warn",
    "jest/valid-expect": "error",
    "no-fallthrough": "off",
    "formatjs/no-offset": "error",
    "no-unused-vars": "off",
    "no-void": "off",
    "no-case-declarations": "off",
    "no-use-before-define": "off",
    "camelcase": "off",
    "array-callback-return": "off",
    "no-prototype-builtins": "off",
    "react/jsx-no-bind": "off",
    "multiline-ternary": "off",
    "react/prop-types": "off",
    "no-async-promise-executor": "off",
    "prefer-const": "off",
    "accessor-pairs": "off",
    "prefer-regex-literals": "off",
    "object-shorthand": "off"
  },
  "env": {
    "jest/globals": true,
    "cypress/globals": true
  }
}
