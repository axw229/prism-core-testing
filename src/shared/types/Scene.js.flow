import type { Color } from './Colors'

export type Surface = {
  id: string,
  role: string,
  thumb: string,
  mask: string,
  hitArea: string,
  shadows?: string,
  highlights?: string
}

export type Variant = {
  image: string,
  thumb: string,
  variant_name: string,
  surfaces: Surface[],
  normalizedImageValueCurve: string
}

export type Scene = {
  id: string,
  width: number,
  height: number,
  variant_names: string[],
  variants: Variant[]
}

export type ScenePayload = {
  count: number,
  scenes: Scene[],
  type: string
}

export type SurfaceStatus = {
  id: number,
  color: Color
}

export type SceneStatus = {
  id: number,
  variant: string,
  surfaces: SurfaceStatus[]
}