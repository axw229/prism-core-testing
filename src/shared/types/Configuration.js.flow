// @flow
export type Configuration = {
  brandId: string,
  colorDetailPageRoot: string,
  colorWall: {
    bloomRadius: number
  },
  displayAddButton?: boolean,
  displayDetailsLink?: boolean,
  displayInfoButton?: boolean,
  error: any,
  ga_domain_id: string,
  loading: boolean,
  swatchShouldEmit: boolean,
  theme: {
    primary: string,
    secondary: string,
    warning: string,
    success: string,
    danger: string,
    error: string,
    grey: string,
    lightGrey: string,
    nearBlack: string,
    black: string,
    white: string
  },
  typography: {
    bodyFontFamily: string,
    titleFontFamily: string
  }
}

/**
 * @description These are the embeddable properties that can be transferred to configuration values
 */
export type EmbeddedConfiguration = {
  brand?: string,
  colorDetailPageRoot?: string,
  displayAddButton?: boolean,
  displayDetailsLink?: boolean,
  displayInfoButton?: boolean,
  language?: string,
  pageRoot?: string,
  routeType?: string,
  swatchShouldEmit?: boolean
}
